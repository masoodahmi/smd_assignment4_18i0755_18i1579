<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"


    >

    <RelativeLayout
        android:id="@+id/picc"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calimagebck">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userpic"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/girl"
            android:elevation="50dp"
            android:background="@drawable/calimagebck"

            />

    </RelativeLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/namee"
        android:layout_below="@+id/picc"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Janet Fowler"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:layout_below="@+id/namee"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="calling..."
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/plusbtn"
            android:layout_marginLeft="50dp"

            android:src="@drawable/ic_baseline_add_24"
            android:padding="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/color2"/>
        <ImageView
            android:layout_toEndOf="@+id/plusbtn"
            android:id="@+id/plusbtn1"
            android:layout_marginLeft="50dp"

            android:src="@drawable/ic_outline_videocam_24"
            android:padding="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/color2"/>

        <ImageView
            android:id="@+id/endcall"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/plusbtn1"
            android:src="@drawable/ic_outline_call1_24"
            android:padding="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle1"/>





    </RelativeLayout>





</RelativeLayout>